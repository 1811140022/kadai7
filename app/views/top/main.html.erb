<h1>
    moriuchi daiki
</h1>
    <%= link_to '商品管理', products_path %>

<hr />
    <% @products.each do |p| %>
        <% pid = p.id %>
            <%= form_for @item, url: {controller: 'cart_items', action: :create} do |d| %>
                <%= p.name %>
                <%= p.price %>円
                <br />
                <%= d.hidden_field :product_id, value: pid %>
                <%= d.label :qty, '数量' %>
                <%= d.number_field :qty, min: "0", value: "0" %>
                <%= d.submit 'カートに入れる' %>
            <% end %>
        <br />
    <% end %>
     <hr/>
        <%= link_to 'カートを確認', carts_path %>